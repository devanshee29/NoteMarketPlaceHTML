@model NotesMarketPlace.Models.AddType
@{
    ViewBag.Title = "AddType";
    Layout = "~/Views/Shared/Admin.cshtml";
}

<!-- Add Type Profile -->
<section id="add-type">
    <div class="content-box-md content-box-sm">
        <div class="container">
            <div class="row margin-set">
                <div class="sub-heading">
                    <h4>Add Type</h4>

                </div>
            </div>

            <div class="details">

                @using (Html.BeginForm())
                {
                    @Html.AntiForgeryToken()

                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })

                    <div class="row">
                        <div class="col-md-6 col-sm-6 col-sm-12">
                            <div class="col-md-12 col-sm-12 col-xs-12">
                                <div class="form-group text-left">
                                    @Html.LabelFor(model => model.TypeName, htmlAttributes: new { @class = "control-label" })

                                    @Html.EditorFor(model => model.TypeName, new { htmlAttributes = new { @class = "form-control", @placeholder = "Enter type name", @style = "margin:15px 0 30px 0;" } })
                                    @Html.ValidationMessageFor(model => model.TypeName, "", new { @class = "text-danger" })
                                </div>
                            </div>

                            <div class="col-md-12 col-sm-12 col-xs-12">
                                <div class="form-group text-left ">
                                    @Html.LabelFor(model => model.Description, htmlAttributes: new { @class = "control-label" })
                                    <div class="form-group">
                                        @Html.TextAreaFor(model => model.Description, new { htmlAttributes = new { @class = "form-control", @placeholder = "Enter description", @style = "margin:15px 0 30px 0;" } })
                                        @Html.ValidationMessageFor(model => model.Description, "", new { @class = "text-danger" })
                                    </div>
                                </div>
                            </div>


                            <div class="col-md-12">
                                <button class="btn btn-sell" type="submit" style="margin-top:30px;">submit</button>
                            </div>
                        </div>
                    </div>
                }
            </div>




        </div>
    </div>
</section>
<!-- Add Type Ends -->
