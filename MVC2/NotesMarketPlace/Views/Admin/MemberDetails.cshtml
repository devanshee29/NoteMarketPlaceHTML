                <div class="row">
                    <div class="col-md-12 notes-heading">
                        <h6 style="font-family:sans-serif;">Notes</h6>
                    </div>

                </div>
                <div class="table-responsive">
                    <table class="table border shadow">
                        <thead>
                            <tr>
                                <th scope="col">sr no.</th>
                                <th scope="col">note title</th>
                                <th scope="col">category</th>
                                <th scope="col">status</th>
                                <th scope="col">downloaded notes</th>
                                <th scope="col">total earnings</th>
                                <th scope="col">date added</th>
                                <th scope="col">published date</th>
                                <th scope="col"> </th>
                            </tr>
                        </thead>
                        <tbody>
                            @{int index = 1; }
                            @foreach (var item in Model.memberdetails)
                            {
                                string Addeddate = String.Format("{0:dd-mm-yyyy,hh:mm}", item.note.CreatedDate);
                                string Publisheddate = String.Format("{0:dd-mm-yyyy,hh:mm}", item.note.PublishedDate);
                                <tr>
                                    <td class="sr-no">@index</td>
                                    <td class="blue"><a href="@Url.Action("NoteDetails", "Admin", new { id = item.note.ID })">@item.note.Title</a></td>
                                    <td>@item.category.Name</td>
                                    <td>@item.status.Value</td>
                                    <td class="text-center blue" style="width:100px;">@TempData[item.note.ID.ToString()]</td>
                                    <td class="text-center" style="width:130px;">$ @TempData[item.note.ID + " earned"]</td>
                                    <td style="padding-left:0; padding-right:0;">@Addeddate</td>
                                    <td style="padding-left:0; padding-right: 0; width:120px;">@Publisheddate</td>
                                    <td>
                                        <div class="dropdown right">
                                            <img src="~/images/Dashboard/dots.png" role="button" alter="client" class="img-responsive eye" href="#" id="dropdownMenuLink" data-toggle="dropdown" ` aria-haspopup="true" aria-expanded="false">


                                            <div class="dropdown-menu width-view">
                                                <div class="dropdown-item"><a href='@Url.Action("Download", "RegisteredUser", new {path=item.attachment.FilePath })' style="color:#333;">Download Note</a></div><br>

                                            </div>
                                        </div>
                                    </td>
                                </tr>
                                index += 1;
                            }


                        </tbody>
                    </table>
                </div>



            </div>
        </div>
