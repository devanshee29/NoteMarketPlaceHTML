                    </div>
                </div>
                @{
                    string DOB = String.Format("{0:dd-mm-yyyy}", Model.userprofile.DOB);
                }

                <div class="row">
                    <div id="member-details-img" class="col-md-2 col-sm-4 col-xs-12">
                        <img src="~/Uploadimg/@Model.userprofile.Profile_Picture" alt="member-id" class="img-responsive img-member " style="height:180px; width:180px;">
